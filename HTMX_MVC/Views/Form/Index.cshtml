@model FormModel

<div class="col-12 col-md-6 mx-auto">
    <form>
        <h2>Create a Account Example</h2>
        @Html.Partial("~/Views/Form/InputName.cshtml", Model)
        @Html.Partial("~/Views/Form/InputEmail.cshtml", Model)
        @Html.Partial("~/Views/Form/InputPassword.cshtml", Model)

        <div class="form-group form-check my-3">
            <input 
                type="checkbox" 
                class="form-check-input"
                id="terms"
                required
            >
            <label class="form-check-label user-select-none cursor-pointer" for="terms">Accept Terms and Conditions</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>