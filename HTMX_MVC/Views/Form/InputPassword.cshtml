@model FormModel
@{
    var showErrors = !String.IsNullOrEmpty(Model.PasswordError);
    var errorClass = showErrors ? "error" : "";
}

<div class="form-group my-3" id="inputPassword">
    <label for="password">Password</label>
    <input 
        name="password" 
        type="password"
        class="form-control showErrors"
        id="password"
        placeholder="Enter password"
        hx-put="@Url.Action("InputPassword")"
        hx-trigger="blur"
        hx-target="#inputPassword"
        hx-swap="outerHTML"
        value="@Model.Password"
    >
    <div class="error mt-1" @errorClass">
        @Model.PasswordError    
    </div>
</div>